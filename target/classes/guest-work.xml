<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<package name="guest" extends="base" namespace="/guest">
		
		<!-- Example for dynamic mehtod invocation -->
		<action name="aboutUs" class="com.my.actions.GuestActions" method="aboutUs">		 	
			<result name="success">/WEB-INF/guest/AboutUs.jsp</result>
			
		</action>
		<action name="contactUs" class="com.my.actions.GuestActions" method="contactUs">		 	
			<result name="success">/WEB-INF/guest/ContactUs.jsp</result>
		</action>
		<action name="login" class="com.my.actions.GuestActions" method="login">		 	
			<result name="success">/WEB-INF/guest/Login.jsp</result>
		</action>		
	</package>
</struts>